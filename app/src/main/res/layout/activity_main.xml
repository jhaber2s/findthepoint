<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="25dp"
        android:text="verbindung ?"
        app:layout_constraintBottom_toTopOf="@+id/btnVerbinden"
        app:layout_constraintStart_toStartOf="@+id/btnVerbinden"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVerbinden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"

        android:text="@string/verbinden"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnFarbeanzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Farbeanzeigen"
        app:layout_constraintBottom_toTopOf="@+id/btnalgostart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/btnalgostart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/find"
        app:layout_constraintEnd_toEndOf="@+id/btnFarbeanzeigen"
        app:layout_constraintTop_toBottomOf="@+id/btnFarbeanzeigen" />

    <Button
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:onClick="findPoint"
        android:text="Find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnalgostart"
        app:layout_constraintTop_toBottomOf="@+id/btnalgostart" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:onClick="showSensors"
        android:text="Sensoren"
        app:layout_constraintBottom_toTopOf="@+id/btnFarbeanzeigen"
        app:layout_constraintStart_toStartOf="@+id/btnVerbinden"
        app:layout_constraintTop_toBottomOf="@+id/btnVerbinden" />

</android.support.constraint.ConstraintLayout>