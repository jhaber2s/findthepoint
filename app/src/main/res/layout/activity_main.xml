<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="8dp"
        android:text="Nicht Verbindung ?"
        app:layout_constraintBottom_toTopOf="@+id/btnVerbinden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVerbinden"
        android:layout_width="368dp"
        android:layout_height="141dp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="btnConnect"
        android:text="@string/verbinden"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/find"
        android:layout_width="368dp"
        android:layout_height="142dp"
        android:onClick="findPoint"
        android:text="Find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="368dp"
        android:layout_height="141dp"
        android:layout_marginStart="8dp"
        android:onClick="showSensors"
        android:text="Sensoren"
        app:layout_constraintBottom_toTopOf="@+id/find"
        app:layout_constraintEnd_toEndOf="@+id/btnVerbinden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVerbinden" />

</android.support.constraint.ConstraintLayout>